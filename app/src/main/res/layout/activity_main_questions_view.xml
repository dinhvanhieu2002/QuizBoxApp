<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:theme="@style/nav_theme"
        app:headerLayout="@layout/activity_nav_header_layout"
        app:menu="@menu/list_menu">

    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_backgroud"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            tools:ignore="UselessParent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/question_view"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="center_horizontal"
                    android:lineHeight="30dp"
                    android:padding="20dp"
                    android:text="Don't let the noise of others' opinions drown out your own inner voice."
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="HardcodedText"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto"
                    android:layout_marginTop="170dp"
                    android:textSize="40sp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/no_of_questions_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/righteous"
                    android:gravity="center"
                    android:text="@string/question_number_countdown"
                    android:textColor="@color/rad_rectangle_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/options_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="280dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/options_btn_bg"
                        android:backgroundTint="@color/header_color"
                        android:fontFamily="@font/roboto_medium"
                        android:text="optionA"
                        android:textColor="@color/header_color"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/options_btn_bg"
                        android:backgroundTint="@color/wrong_ans"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/header_color"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/options_btn_bg"
                        android:backgroundTint="@color/header_color"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/header_color"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/options_btn_bg"
                        android:backgroundTint="@color/header_color"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/header_color"
                        android:textSize="13sp" />

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>